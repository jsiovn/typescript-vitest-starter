{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsx: run current file",
      "type": "shell",
      "command": "tsx ${file}"
    },
    {
      "label": "vitest: run current test file",
      "type": "shell",
      "command": "yarn test run ${relativeFile}"
    },
    {
      "label": "vitest: watch current test file",
      "type": "shell",
      "command": "yarn test ${relativeFile}",
      "isBackground": true
    }
  ]
}